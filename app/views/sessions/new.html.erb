
<img src="/images/242x82.png"> </img>


<div class="signup_block">



  <%= form_tag sessions_path do %>
      <div class="section_block" id="section_block">
        <div class="login_content">
          <div class="login-head">
            <h1 style="color:darkred">Log in</h1>
          </div>
          <div class="form-group">
            <%= label_tag :email %><br />
            <%= text_field_tag :email, params[:email] %>
          </div>
          <div class="form-group">
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
          </div>
          <p><b><%= link_to "forgotten password?", new_password_reset_path %></b></p>
          <div class="form-group">
            <%= label_tag :remember_me %>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          </div>
          <h3 style="color:blueviolet">New user? <%= link_to "Sign up now!", sign_up_path %></h3>
          <div class="button">
            <%= submit_tag "Log in" %>
          </div>
  <% end %>
  </div>
  </div>
</div>
