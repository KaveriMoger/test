<div class="signup_block">


  <%= form_for @client do |f| %>
      <div class="section_block" id="section_block">
        <div class="login_content">
          <div class="login-head">
            <h1 style="color:darkred">Client Page</h1>
          </div>

          <% if @client.errors.any? %>
              <div id="error_explanation">
                <h2>
                  <%= pluralize(@client.errors.count, "error") %> prohibited
                  this article from being saved:
                </h2>
                <ul>
                  <% @client.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :Name %>
            <%= f.text_field :c_name %>
          </div>

          <div class="form-group">
            <%= f.label :Email %>
            <%= f.email_field :c_email %>
          </div>

          <div class="form-group">
            <%= f.label :Website %>
            <%= f.text_field :c_website %>
          </div>


          <div class="form-group">
            <%= f.label :Country %>
            <%= f.text_field :c_country %>
          </div>



          <div class= "button" >
            <%= f.submit %>
          </div>

  <% end %>
  <b><%= link_to 'Back', clients_path %></b>
  </div>
  </div>
</div>